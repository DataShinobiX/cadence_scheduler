# ============================================
# UniGames Intelligent Scheduler - Production Environment
# ============================================
# This is the production configuration for VM deployment

# ============================================
# Application Settings
# ============================================
APP_NAME=UniGames Intelligent Scheduler
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY_IN_PRODUCTION

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://scheduler_user:scheduler_pass@localhost:5432/scheduler_db
DATABASE_POOL_SIZE=10

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# OpenAI API
# ============================================
# REQUIRED: Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_ACTUAL_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.0

# ============================================
# Google OAuth & APIs
# ============================================
# REQUIRED: Setup at https://console.cloud.google.com/
# 1. Create project
# 2. Enable Google Calendar API and Gmail API
# 3. Create OAuth 2.0 credentials
# 4. Add redirect URI: http://95.179.179.94:8000/api/auth/google/callback
# 5. Copy credentials here

GOOGLE_CLIENT_ID=YOUR_ACTUAL_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_ACTUAL_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://95.179.179.94:8000/api/auth/google/callback

# ============================================
# JWT & Security
# ============================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# ChromaDB
# ============================================
CHROMA_PERSIST_DIRECTORY=./chroma_data

# ============================================
# Celery Configuration (Email Agent)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Production Settings
# ============================================
RELOAD=false
WORKERS=4

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Timezone
# ============================================
DEFAULT_TIMEZONE=UTC

# ============================================
# Frontend URL (for OAuth redirects)
# ============================================
FRONTEND_URL=http://95.179.179.94
